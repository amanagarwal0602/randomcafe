# Root Environment Variables Example
# Copy this to .env and configure for your environment

# Application Mode
NODE_ENV=production

# Server Configuration
PORT=5000

# Client URL (for CORS)
CLIENT_URL=https://your-domain.com

# MongoDB Connection
# Get your connection string from MongoDB Atlas or your MongoDB hosting provider
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/lumiere-cafe?retryWrites=true&w=majority

# JWT Secrets (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production-min-32-chars
JWT_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Payment Gateway (Optional)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
