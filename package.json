{
  "name": "lumiere-cafe",
  "version": "1.0.0",
  "description": "Premium caf√© website with admin panel and customer portal",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "client": "cd client && npm start",
    "server": "cd server && npm run dev",
    "build": "cd client && npm run build",
    "build:server": "cd server && npm install --production",
    "install:all": "npm install && cd client && npm install && cd ../server && npm install",
    "start": "cd server && npm start",
    "heroku-postbuild": "cd client && npm install && npm run build",
    "docker:build": "docker build -t lumiere-cafe .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "deploy:vercel": "cd client && vercel --prod",
    "deploy:netlify": "cd client && netlify deploy --prod"
  },
  "keywords": [
    "cafe",
    "restaurant",
    "admin-panel",
    "customer-portal"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
